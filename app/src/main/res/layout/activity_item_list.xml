<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__item__list__container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <ListView
        android:id="@+id/activity__item__list__item__list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="70dp" >

    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

            <Button
                android:id="@+id/activity__item__list__edit__item__button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="2.5dp"
                android:layout_marginEnd="2.5dp"
                android:text="@string/activity_item_list_edit_button_text"
                android:textSize="15sp"
                tools:ignore="SpUsage"
                />

            <Button
                android:id="@+id/activity__item__list__filter__item__button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="2.5dp"
                android:layout_marginEnd="2.5dp"
                android:text="@string/activity_item_list_filter_button_text"
                android:textSize="15sp" />

            <Button
                android:id="@+id/showTagList_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="2.5dp"
                android:layout_marginEnd="2.5dp"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:text="Show Tags" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity__item__list__add__item__button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="30dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@android:drawable/ic_input_add"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity__item__list__add__tag__button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="30dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:srcCompat="@android:drawable/btn_star" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity__item__list__remove__item__button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="30dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/activity__item__list__cost__sum__text"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|center"
        android:layout_margin="30dp"
        android:background="@color/lavender"
        android:text="hello there"
        android:textAlignment="center"
        android:textSize="30sp" />

</FrameLayout>
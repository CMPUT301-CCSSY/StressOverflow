<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/activity__item__list__container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="6dp"
        >
        <Button
            android:id="@+id/activity__item__list__edit__item__button"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="@string/activity_item_list_edit_button_text"
            android:textSize="20dp"
            tools:ignore="SpUsage"
            />

        <Button
            android:id="@+id/activity__item__list__filter__item__button"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/activity_item_list_filter_button_text"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

    </LinearLayout>
    <ListView
        android:id="@+id/activity__item__list__item__list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="70dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity__item__list__add__item__button"
        android:clickable="true"
        android:layout_gravity="bottom|end"
        android:focusable="true"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_margin="30dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity__item__list__remove__item__button"
        android:clickable="true"
        android:layout_gravity="bottom|start"
        android:focusable="true"
        app:srcCompat="@android:drawable/ic_delete"
        android:layout_margin="30dp"
        />
    <TextView
        android:id="@+id/activity__item__list__cost__sum__text"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|center"
        android:layout_margin="30dp"
        android:text="hello there"
        android:textSize="30sp"
        android:background="@color/lavender"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/showTagList_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:text="ShowTagList" />
</FrameLayout>
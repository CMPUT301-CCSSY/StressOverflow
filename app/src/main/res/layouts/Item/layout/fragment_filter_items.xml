<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:layout_weight="1"
    tools:context=".FilterDialog">

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="20dp"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/filter__dialog__keywords__header"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/fragment_filter_items_keywords_textedit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetTop="0dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/fragment_filter_items_keywords_chipgroup"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:text="@string/filter__dialog__date__header"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/fragment_filter_items_start_date_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/filter__dialog__start__date__hint" />

        <EditText
            android:id="@+id/fragment_filter_items_end_date_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/filter__dialog__end__date__hint" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/filter__dialog__make__header"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/fragment_filter_items_makes_chipgroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/filter__dialog__tags__header"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/fragment_filter_items_all_tags_checkbox"
            android:layout_height="40dp"
            android:text="@string/filter__dialog__tags__select__all__text" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/fragment_filter_items_tags_chipgroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/filter__dialog__sort__header"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/fragment_filter_items_sort_type_buttongroup"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            app:singleSelection="true">

            <Button
                android:id="@+id/fragment_filter_items_date_sort_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="@string/filter__dialog__date__btn__text" />

            <Button
                android:id="@+id/fragment_filter_items_description_sort_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="@string/filter__dialog__descr__btn__text" />

            <Button
                android:id="@+id/fragment_filter_items_make_sort_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="@string/filter__dialog__make__btn__text" />

            <Button
                android:id="@+id/fragment_filter_items_value_sort_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="@string/filter__dialog__value__btn__text" />

            <Button
                android:id="@+id/fragment_filter_items_tag_sort_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="Tag" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/fragment_filter_items_sort_order_buttongroup"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:singleSelection="true">

            <Button
                android:id="@+id/fragment_filter_items_asc_sort_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/filter__dialog__asc__btn__text" />

            <Button
                android:id="@+id/fragment_filter_items_dec_sort_button"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/filter__dialog__desc__btn__text" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="50dp">

<!--        <Button-->
<!--            android:id="@+id/fragment_filter_items_back_button"-->
<!--            style="@style/Widget.Material3.Button.TonalButton"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_weight="1"-->
<!--            android:backgroundTint="@color/black"-->
<!--            android:text="@string/filter__dialog__back__btn__text"-->
<!--            android:textColor="@color/white" />-->

<!--        <Button-->
<!--            android:id="@+id/fragment_filter_items_filter_button"-->
<!--            style="@style/Widget.Material3.Button.TonalButton"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_column="3"-->
<!--            android:layout_gravity="end"-->
<!--            android:layout_weight="1"-->
<!--            android:backgroundTint="@color/black"-->
<!--            android:text="@string/filter__dialog__filter__btn__text"-->
<!--            android:textColor="@color/white" />-->

    </TableRow>

</TableLayout>
</ScrollView>
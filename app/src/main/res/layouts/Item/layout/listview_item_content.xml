<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/listview__item__picture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.00"
            android:paddingLeft="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listview__item__title"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1.00"
                android:text="@string/listview_item_content_placeholder_text"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/listview__item__model__make"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1.00"
                android:text="@string/listview_item_content_placeholder_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/listview__item__description"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1.00"
                android:paddingTop="3dp"
                android:text="@string/listview_item_content_placeholder_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/listview__item__price"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_weight="1.00"
                android:paddingTop="3dp"
                android:text="@string/listview_item_content_placeholder_number"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingTop="3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listview__item__date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10sp" />

            <TextView
                android:id="@+id/listview__item__serial__number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listview_item_content_placeholder_serial"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/listview__item__tag__container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </LinearLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/itemTagChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:paddingEnd="8sp" />

    </LinearLayout>
</LinearLayout>
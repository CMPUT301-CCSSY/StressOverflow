<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/subtle_grey"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/add__item__fragment__title__header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_item_fragment_title_header"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add__item__fragment__edit__title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/sagi_edit_text"
                android:hint="Item Name"
                android:paddingStart="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/add__item__fragment__make__header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_item_fragment_make_header"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/add__item__fragment__edit__make"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/sagi_edit_text"
                    android:hint="Make"
                    android:paddingStart="12dp" />

                <EditText
                    android:id="@+id/add__item__fragment__edit__model"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/sagi_edit_text"
                    android:hint="Model"
                    android:paddingStart="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/add__item__fragment__description__header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/add_item_fragment_description_header"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/add__item__fragment__edit__description"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/sagi_edit_text"
                    android:hint="Description"
                    android:paddingStart="12dp" />

                <Button
                    android:id="@+id/add__item__fragment__button__description"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/sagi_button"
                    android:text="@string/add_item_fragment_description_button"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_item_fragment_year_header"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/add__item__fragment__edit__year"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/sagi_edit_text"
                    android:hint="YYYY"
                    android:paddingStart="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_item_fragment_month_header"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/add__item__fragment__edit__month"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/sagi_edit_text"
                    android:hint="MM"
                    android:paddingStart="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_item_fragment_date_header"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/add__item__fragment__edit__date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/sagi_edit_text"
                    android:hint="DD"
                    android:paddingStart="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_item_fragment_value_header"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add__item__fragment__edit__value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/sagi_edit_text"
                android:hint="1000"
                android:paddingStart="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/add__item__fragment__comment__header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_item_fragment_comment_header"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add__item__fragment__edit__comment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/sagi_edit_text"
                android:hint="Comment (optional)"
                android:paddingStart="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/add__item__fragment__tag__header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_item_fragment_tag_header"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/add_item_fragment_add_tag_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/sagi_button"
                    android:text="Add Tag"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/add_item_fragment_refresh_tags_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/sagi_button"
                    android:text="Refresh Tags"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/add__item__fragment__chipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/add__item__fragment__picture__header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_item_fragment_picture_header"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/add__item__fragment__edit__pictures"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/sagi_button"
                android:text="@string/add_item_fragment_picture_button_text"
                app:backgroundTint="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/add__item__fragment__serial__header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_item_fragment_serial_header"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/add__item__fragment__edit__serial"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/sagi_edit_text"
                    android:hint="123456789"
                    android:paddingStart="12dp" />

                <Button
                    android:id="@+id/add__item__fragment__button__serial"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1.3"
                    android:background="@drawable/sagi_button"
                    android:text="@string/add_item_fragment_serial_button"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>
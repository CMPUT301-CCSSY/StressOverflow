<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <GridView
        android:id="@+id/images_area"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="12dp"
        android:layout_marginTop="16dp"
        android:background="@color/subtle_grey"
        android:clipToPadding="false"
        android:numColumns="3"
        app:layout_constraintBottom_toTopOf="@+id/delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:listSelector="@android:drawable/dialog_holo_light_frame"
        />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/sagi_button"
        android:text="@string/select_image_fragment_delete_button_text"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/icon_button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/sagi_button"
        android:text="@string/select_image_fragment_icon_image_button_text"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_image_button"
        app:layout_constraintStart_toEndOf="@+id/delete_button" />

    <Button
        android:id="@+id/add_image_button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/sagi_button"
        android:text="@string/select_image_fragment_add_images_button_text"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>